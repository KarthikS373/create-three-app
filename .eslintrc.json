{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "amd": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier", "simple-import-sort", "@typescript-eslint", "unused-imports"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "quotes": ["error", "double"],
    "semi": ["error", "never"],
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  },
  "overrides": [
    // {
    //   "files": ["**/*.js", "**/*.ts", "**/*.tsx"],
    //   "rules": {
    //     "simple-import-sort/imports": [
    //       "error",
    //       {
    //         "groups": [
    //           ["^[a-z]"],
    //           ["^@"],
    //           ["^~"],
    //           ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
    //           ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
    //           ["^\\u0000"]
    //         ]
    //       }
    //     ]
    //   }
    // }
  ]
}
